<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- dev -->
    <!-- 定义日志文件 输入位置 -->
    <property name="log_dir" value="/logs/mark-common-war-overlay" />
    <!-- 日志最大的历史 30天 -->
    <property name="maxHistory" value="30" />
    
    <!-- 控制台输出 -->
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger[%M] - %msg%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>debug</level>
        </filter>
    </appender>
    
    <!-- info log 文件输出 -->
    <appender name="infofile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${log_dir}/info/info.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${log_dir}/info/info.log.%d{yyyy-MM-dd}</fileNamePattern>
            <maxHistory>${maxHistory}</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger[%M] - %msg%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>info</level>
        </filter>
    </appender>
    
    <!-- error log 文件输出 -->
    <appender name="errorfile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${log_dir}/error/error.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${log_dir}/error/error.log.%d{yyyy-MM-dd}</fileNamePattern>
            <maxHistory>${maxHistory}</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger[%M] - %msg%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>error</level>
        </filter>
    </appender>
    
    <!-- 关闭 dubbo 监控日志 -->
    <logger name="com.alibaba.dubbo.monitor.dubbo" level="off"></logger>
    
    <!--日志输出设置 -->
	<logger name="com.mark" level="DEBUG"/>
	<logger name="org.springframework" level="ERROR"/>
	<logger name="org.apache" level="ERROR"/>
	<logger name="org.mybatis" level="DEBUG"/>
	<logger name="com.alibaba.dubbo" level="ERROR"/>
	<logger name="org.I0Itec" level="ERROR"/>
    
    <root level="DEBUG">
        <appender-ref ref="console" />
        <!-- <appender-ref ref="infofile" />
        <appender-ref ref="errorfile" /> -->
    </root>
    
</configuration>
